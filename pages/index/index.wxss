page {
  background-color: #eee;
}

.container {
  font-size: 32rpx;
  color: #666;
}

.line {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.title {
  font-weight: bold;
  color: #313131;
}

.cover {
  width: 100%;
  height: 450rpx;
  margin: 20rpx 0;
}

.cover image {
  width: 100%;
  height: 100%;
}

.subtitle {
  font-size: 30rpx;
}

.date {
  font-size: 28rpx;
  /* margin-top: 10rpx; */
}

.footer {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  margin-top: 10rpx;
  height: 64rpx;
  line-height: 64rpx;
}

.f-left {
  display: flex;
  justify-content: flex-start;
}

.f-left view{
  margin-right: 20rpx;
}

.view:before{
  display: inline-block;
  content: '';
  width: 32rpx;
  height: 32rpx;
  background: url('data:image/png;base64,') center center no-repeat;
  background-size: 100% 100%;
  vertical-align: middle;
  margin-right: 10rpx;
  margin-top: -8rpx;
}


